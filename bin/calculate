#!/usr/bin/env python

import sys
import mathfuncs.sum
import mathfuncs.advance.square

if len(sys.argv) > 2:
    x = sys.argv[1]
    y = sys.argv[2]

else:
    print "Please provide two numbers to calculate Sum, Difference and Product"
    exit()

print"Sum of {} and {} is {}".format(x, y, mathfuncs.sum.calculate(x, y))
print"Product of {} and {} is {}".format(x, y, mathfuncs.advance.product.calculate(x, y))
